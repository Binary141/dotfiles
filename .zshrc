function grade() {
if [ -f ./.grind ]
then
  step=$(cat ./.grind | grep step | awk '{print $2}')
  message=$(echo $(pwd) ${step})
  git add . && git commit -m "${message}" && git push && grind grade
else
    echo "Not in a grind project folder"
fi
}
